{
  "name": "bibneat-studio",
  "version": "1.0.0",
  "main": ".vite/build/main.js",
  "private": true,
  "description": "GUI for the bibneat C++/WASM library for managing BibTeX files",
  "author": {
    "name": "Bibneat Team"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "NODE_ENV=development electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && npm run electron\"",
    "start": "NODE_ENV=production electron .",
    "generate-icons": "node scripts/generate-icons.js",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make:mac": "electron-forge make --platform=darwin",
    "make:win": "electron-forge make --platform=win32 --arch=x64",
    "make:linux": "electron-forge make --platform=linux --arch=x64",
    "make:all": "npm run make:mac && npm run make:win && npm run make:linux",
    "make:zip-only": "electron-forge make --skip-package --targets=@electron-forge/maker-zip",
    "package:all-platforms": "npm run package:mac && npm run package:win && npm run package:linux",
    "package:mac": "electron-forge package --platform=darwin --arch=arm64",
    "package:win": "electron-forge package --platform=win32 --arch=x64",
    "package:linux": "electron-forge package --platform=linux --arch=x64",
    "publish": "electron-forge publish"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-dmg": "^7.8.1",
    "@electron-forge/maker-flatpak": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-vite": "^7.8.1",
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.2.0",
    "electron": "^36.5.0",
    "electron-installer-dmg": "^5.0.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "vite": "^6.3.5",
    "vite-plugin-static-copy": "^3.1.0",
    "wait-on": "^8.0.3"
  }
}
